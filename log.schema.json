{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "FLMx Validator Log",
    "description": "Log for FLMx Validator application",
    "properties": {
        "entries": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "timestamp": {
                        "description": "Timestamp of log entry (ISO 8601)",
                        "type": "string"
                    },
                    "level": {
                        "description": "Indicates level of log entry",
                        "enum": [ "error", "info", "debug" ]
                    },
                    "message": {
                        "description": "Log message",
                        "type": "string"
                    },
                    "stacktrace": {
                        "description": "Full exception stack trace",
                        "type": "string"
                    }
                },
                "required" : ["timestamp", "level", "message"]
            }
        }
    }
}